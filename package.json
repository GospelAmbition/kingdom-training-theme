{
  "name": "kingdom-training-theme",
  "version": "2.0.0",
  "description": "Kingdom Training WordPress Theme with Tailwind CSS",
  "scripts": {
    "build:css": "npx tailwindcss -i ./css/input.css -o ./css/theme.css --minify",
    "watch:css": "npx tailwindcss -i ./css/input.css -o ./css/theme.css --watch",
    "dev": "npm run watch:css"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
